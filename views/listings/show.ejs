<% layout("/layouts/boilerplate")%>
    <div class="row mt-3">
      <div class="col-8 offset-2">
    <h3>Listing Details:</h3>
  </div>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <h5 class="card-title"><b><%= listing.title %></b></h5><br/>
          <p class="card-text"><%= listing.description %> <br/>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br/>
            <%= listing.location %> <br/>
            <%= listing.country %> <br/>
          </p>
        </div>
    </div>
   <br/>
   <div class="col-1">
    <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
   </div>
  
    <div class="col-1">
      <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
        <button class="btn-dark">Delete</button>
      </form>
    </div>
    <div class="col-8 offset-3">
      <hr/>
      <h4>Leave a Review</h4>
      <form action="/listing/<%= listing.id %>/reviews" method="POST">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
        </div>
        <div class="mb-3 mt-3">
          <label for="comments" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment"  rows="5" cols="25" class="form-control"></textarea>
        </div>
        <button class="btn-dark">Submit</button>
      </form>

    </div>


    </div>
  